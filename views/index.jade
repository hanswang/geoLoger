mixin tableRow(idx, data)
    tr.locationRecord
        td= idx + 1
        td
            = data.name
            table.table
                tbody
                    tr
                        td.bg-primary Latitude
                        td= data.latitude
                        td.bg-primary Longtitude
                        td= data.longtitude
        td.btn.removeRecord&attributes({'data-srcid': data.id})
            i.glyphicon.glyphicon-remove-circle

extend layout
block autocomplete
    .input-group
        input(id='autoSearch' type='text' class='form-control' placeholder='Find Location...')
        span.input-group-btn
            button.btn.btn-primary(type='button') Add

block content
    table.table.locationCollection
        thead
            tr
                th ID
                th Location (Latitude & Longtitude)
                th Del
        tbody
            each loc, key in locations
                +tableRow(key, loc)

block sidebar
    h4 Location Map
    .canvas
        #map-canvas

block onpageScript
    script(type='text/javascript' src='https://maps.googleapis.com/maps/api/js?v=3.20&libraries=places&sensor=false')
    script(type='text/javascript' src='/js/google-autocomplete.js')
    script(type='text/javascript' src='/js/pageclient.js')
